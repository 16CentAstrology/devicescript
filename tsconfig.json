{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2022",
        "module": "es2015",
        "lib": [],
        "strict": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "sourceMap": false,
        "declaration": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "types": []
    },
    "exclude": [
        "**/node_modules/*",
        "compiler/src"
    ],
    "include": [
        "samples",
        "compiler/lib",
        "compiler/run-tests",
        "compiler/compiler-tests"
    ]
}